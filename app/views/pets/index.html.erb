<% provide(:title, "Our Pets") %>

<div class='col-md-12'>
  <h1>Our Pets</h1>
</div>

<section class='hero-unit container'>
  <% @pets.each do |p| %>
    <div class="col-md-4" style="padding:15px; text-align: center;">
      <%= link_to(p) do %>
        <div class='pet-block'>
          <%= image_tag p.profile_picture.thumb.url, class: 'img-thumbnail' %>
          <br />
          <caption><%= p.name %></caption>
        </div>
      <% end %>
    </div>
  <% end %>
</section>
