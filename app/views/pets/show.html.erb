<% provide(:title, @pet.name) %>

<h1><%= @pet.name %></h1>
<h2>(born <%= @pet.birth_date %>)</h2>
<section class="hero-unit">
  <div class="row">
    <%= link_to image_tag(@pet.profile_picture.thumb.url, class: 'img-thumbnail, pull-left'), @pet.profile_picture_url, target: '_blank' %>
    <div class="pull-left">
      <dl class='dl-horizontal'>
        <dt>Breed</dt><dd><%= @pet.breed %></dd>
        <dt>Gender</dt><dd><%= @pet.gender %></dd>
        <dt>Age</dt><dd><%= @pet.age %></dd>
        <dt>Coat Color</dt><dd><%= @pet.color %></dd>
        <dt>Eye Color</dt><dd><%= @pet.eye_color %></dd>
        <dt>Height</dt><dd><%= @pet.height %>"</dd>
        <dt>Weight</dt><dd><%= @pet.weight %> lbs</dd>
      </dl>
    </div>
  </div>
  <div class="row">
    <p><%= @pet.description %></p>
  </div>
</section>
