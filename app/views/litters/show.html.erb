<% provide(:title, "#{@litter.mother.name} #{@litter.birth_date}") %>
<div>
  <h1>Litter Born On <%= @litter.birth_date %></h1>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-4 center"><h3>Mother</h3></div>
    <div class="col-md-4 center"><h3>Father</h3></div>
  </div>
  <div class="row">
     <%= render @litter.mother %>
     <%= render @litter.father %>
  </div>
  <div class="row">
    <div class="col-md-12 center"><h3><%= SiteSettings.baby_species.pluralize.titlecase %></h3></div>
  </div>
  <div class="row">
    <% @litter.pets.each do |p| %>
      <%= render p %>
    <% end %>
  </div>
</div>
